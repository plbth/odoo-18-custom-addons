<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_custom_quotation" model="ir.actions.report">
        <field name="name">Bảng Báo Giá Tùy Chỉnh</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-html</field>
        <!-- This name must match with _name in the Python file and template ID -->
        <field name="report_name">gopify_sale.template_custom_quotation</field>
        <field name="report_file">gopify_sale.template_custom_quotation</field>
        <field name="print_report_name">'Bao-gia-%s' % (object.name)</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="gopify_sale.paperformat_custom_quotation"/>
    </record>

</odoo>
