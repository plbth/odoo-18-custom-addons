<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="template_custom_quotation">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.basic_layout">
                    <div class="page quotation">
                        <!-- HEADER SECTION -->
                        <div class="quotation_header">
                            <div class="quotation_logo">
                                <img t-if="doc.company_id.logo"
                                    t-att-src="image_data_uri(doc.company_id.logo)"
                                    class="o_company_logo" alt="Logo Công ty"
                                />
                            </div>
                            <div class="quotation_company">
                                    Thông tin Công Ty
                                    <div class="company-details">
                                        <strong>
                                            <span t-field="doc.company_id.name" />
                                        </strong>
                                        <br/>

                                        <span t-field="doc.company_id.street" />
                                        <br/>

                                        <span t-if="doc.company_id.street2"
                                              t-field="doc.company_id.street2" />
                                        <br/>

                                        <span t-field="doc.company_id.city" />
                                        <span t-if="doc.company_id.state_id">, 
                                            <span t-field="doc.company_id.state_id.name" />
                                        </span>
                                        <br/>

                                        <span t-if="doc.company_id.phone">Tel: 
                                            <span t-field="doc.company_id.phone" />
                                        </span>
                                        <br/>
                                        
                                        <span t-if="doc.company_id.email">Email: 
                                            <span t-field="doc.company_id.email" />
                                        </span>
                                    </div>
                            </div>
                        </div>

                        <!-- TITLE -->
                        <div class="quotation_title">
                            <h2 class="h3 fw-bold mb-0">BẢNG BÁO GIÁ</h2>
                        </div>

                        <!-- CUSTOMER INFO -->
                        <div class="customer_info">
                            <div class="info_row">
                                <div class="info_label">
                                    Khách hàng:
                                </div>
                                <div class="info_value">
                                    <span t-field="doc.partner_id.name" />
                                </div>
                            </div>

                            <div class="info_row">
                                <div class="info_label">
                                    Địa chỉ:
                                </div>
                                <div class="info_value">
                                    <span t-field="doc.partner_id.street" />
                                    <span t-if="doc.partner_id.street2">, 
                                        <span t-field="doc.partner_id.street2" />
                                    </span>
                                    <span t-if="doc.partner_id.city">, 
                                        <span t-field="doc.partner_id.city" />
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- PRODUCT TABLE -->
                        <table class="quotation_table">
                            <thead>
                                <tr>
                                    <th class="col_stt">STT</th>
                                    <th>Sản Phẩm</th>
                                    <th class="col_unit">ĐVT</th>
                                    <th class="col_qty">SL</th>
                                    <th class="col_price">Giá</th>
                                    <th class="col_discount">Giảm giá</th>
                                    <th class="col_tax">Thuế</th>
                                    <th class="col_total">THÀNH TIỀN</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="stt" t-value="0" />
                                <t t-foreach="doc.order_line" t-as="line">
                                    <t t-set="stt" t-value="stt + 1" />
                                    <tr>
                                        <td class="text-center">
                                            <span t-esc="stt" />
                                        </td>
                                        <td>
                                            <span t-field="line.name" />
                                        </td>
                                        <td class="text-center">
                                            <span t-field="line.product_uom.name" />
                                        </td>
                                        <td class="text-end">
                                            <span t-field="line.product_uom_qty"
                                                  t-options='{"widget": "float", "precision": 0}' />
                                        </td>
                                        <td class="text-end">
                                            <span t-field="line.price_unit"
                                                  t-options='{"widget": "monetary", "display_currency": doc.currency_id}' />
                                        </td>
                                        <td class="text-end">
                                            <span t-esc="format_discount(line.discount)" />
                                        </td>
                                        <td class="text-end">
                                            <span t-esc="format_tax_rate(line.tax_id)" />
                                        </td>
                                        <td class="text-end">
                                            <span t-field="line.price_total"
                                                  t-options='{"widget": "monetary", "display_currency": doc.currency_id}' />
                                        </td>
                                    </tr>
                                </t>

                                <!-- TOTAL ROW -->
                                <tr class="total_row">
                                    <td colspan="7" class="text-end">
                                        Cộng
                                    </td>
                                    <td class="text-end">
                                        <span t-field="doc.amount_total"
                                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}' />
                                    </td>
                                </tr>

                                <!-- AMOUNT IN WORDS -->
                                <tr>
                                    <td colspan="8" class="fst-italic">
                                        Bằng chữ: <span t-esc="amount_to_text_vi(doc.amount_total, doc.currency_id.name)" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- PRICE NOTES -->
                        <div class="quotation_notes">
                            (Giá trên chưa bao gồm 10% thuế GTGT)
                        </div>

                        <!-- TERMS AND CONDITIONS -->
                        <div class="quotation_terms">
                            <div class="terms_title">
                                <span class="fw-bold fst-italic text-decoration-underline">
                                    Thời gian thực hiện và phương thức thanh toán:
                                </span>
                            </div>
                            <div class="terms_content">
                                <span t-field="doc.date_order"/>
                                <span t-field="doc.payment_term_id" t-if="doc.payment_term_id"/>
                                <br/>
                                vui lòng xem tại:   
                            </div>
                        </div>

                        <!-- SIGNATURE SECTION -->
                        <div class="quotation_signature">
                            <div class="signature_left"></div>
                            <div class="signature_right">
                                <div class="fw-bold mb-2">
                                    Địa chỉ, Ngày .... tháng .... năm ....
                                </div>
                                <div class="fw-bold mb-2">
                                    Giám Đốc
                                </div>
                                <div class="signature_space"></div>
                                <div class="fw-bold">
                                    Ký ghi rõ họ tên
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>